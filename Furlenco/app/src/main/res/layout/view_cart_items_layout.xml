<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_5"
    android:elevation="@dimen/dp_10">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:drawableStart="@drawable/ic_back_arrow"
                android:drawablePadding="@dimen/dp_20"
                android:padding="@dimen/dp_5"
                android:text="My Cart"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_15">

            </TextView>

        </androidx.cardview.widget.CardView>


        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/light_blue"></View>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:background="@drawable/light_gray_rect"
        android:layout_margin="@dimen/dp_5"
        android:padding="@dimen/dp_10">

        <ImageView
            android:id="@+id/iv_item"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:src="@drawable/delivery_van"></ImageView>

        <TextView
            android:id="@+id/tv_item_delivery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_item"
            android:text="Delivery"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/dp_15"></TextView>

        <TextView
            android:id="@+id/tv_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:layout_toRightOf="@id/iv_item"
            android:text="Name"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/dp_15"></TextView>

        <TextView
            android:id="@+id/tv_item_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_name"
            android:layout_margin="@dimen/dp_10"
            android:layout_toRightOf="@id/iv_item"
            android:background="@drawable/light_gray_rect"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:text="-  4  +"
            android:textColor="@color/navy_blue"
            android:textSize="@dimen/dp_15"></TextView>
        <TextView
            android:id="@+id/tv_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:layout_alignParentEnd="true"
            android:text="750/- mo "
            android:textColor="@color/black"
            android:textSize="@dimen/dp_15"></TextView>
        <TextView
            android:id="@+id/tv_item_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/tv_item_price"
            android:text="32%"
            android:textColor="@color/teal_200"
            android:textSize="@dimen/dp_15"></TextView>
        <TextView
            android:id="@+id/tv_item_gst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/tv_item_discount"
            android:text="+ 135 GST"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/dp_15"></TextView>
    </RelativeLayout>
</RelativeLayout>