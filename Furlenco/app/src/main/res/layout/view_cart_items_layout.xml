<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_5"
    android:elevation="@dimen/dp_10"
    app:cardElevation="@dimen/dp_10">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvImage2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            app:cardCornerRadius="@dimen/dp_10">

            <ImageView
                android:id="@+id/iv_item"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_75"
                android:scaleType="fitXY"
                android:src="@drawable/delivery_van" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_item_delivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cvImage2"
            android:layout_marginStart="@dimen/sp_10"
            android:layout_marginBottom="@dimen/sp_10"
            android:text="Delivery in 72 hours | Minimum tenure 3 months"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/sp_10" />

        <TextView
            android:id="@+id/tv_item_name"
            android:layout_width="@dimen/dp_150"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:layout_toRightOf="@id/cvImage2"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_item_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_name"
            android:layout_margin="@dimen/dp_10"
            android:layout_toRightOf="@id/cvImage2"
            android:background="@drawable/light_gray_rect"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_5"
            android:paddingRight="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_5"
            android:text="1  + "
            android:textColor="@color/button_blue"
            android:textSize="@dimen/dp_15" />

        <TextView
            android:id="@+id/tv_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:text="750/- mo "
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_item_gst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_price"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="@dimen/dp_10"
            android:text="+180 GST"
            android:textColor="@color/dark_grey"
            android:textSize="12sp" />

        <ImageButton
            android:id="@+id/ibDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_gst"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginEnd="@dimen/dp_10"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_baseline_delete_outline_24" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>